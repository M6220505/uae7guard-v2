# UAE7Guard Screenshot Configuration for Fastlane

# Required devices for App Store
devices([
  "iPhone 16 Pro Max",           # 6.9" Display
  "iPhone 15 Pro",               # 6.3" Display
  "iPhone 14",                   # 6.1" Display
  "iPhone 8 Plus",               # 5.5" Display
  "iPhone SE (3rd generation)"   # 4.7" Display
])

# Languages (English and Arabic)
languages([
  "en-US",
  "ar-SA"
])

# Scheme name
scheme("App")

# Output directory
output_directory("./screenshots")

# Clear previous screenshots
clear_previous_screenshots(true)

# Override status bar
override_status_bar(true)

# Customize status bar
status_bar_content_type("light")

# Launch arguments
launch_arguments([
  "-UITesting"
])
